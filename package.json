{
	"name": "wpgens-theme",
	"version": "1.0.0",
	"description": "WordPress theme with custom Gutenberg blocks",
	"main": "index.js",
	"scripts": {
		"dev": "vite",
		"build": "npx tailwindcss -i assets/css/theme.css -o assets/css/tailwind.css --watch",
		"build-prod": "npx tailwindcss -i assets/css/theme.css -o assets/css/tailwind.css --minify",
		"build:blocks": "wp-scripts build --webpack-src-dir=blocks/src --output-path=blocks/build",
		"start:blocks": "wp-scripts start --webpack-src-dir=blocks/src --output-path=blocks/build",
		"format": "wp-scripts format",
		"lint:js": "wp-scripts lint-js",
		"lint:style": "wp-scripts lint-style",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"keywords": [
		"wordpress",
		"theme",
		"gutenberg",
		"blocks"
	],
	"author": "WPGens",
	"license": "GPL-2.0-or-later",
	"devDependencies": {
		"@wordpress/scripts": "^26.19.0",
		"tailwindcss": "^3.3.3",
		"vite": "^4.4.9"
	},
	"dependencies": {
		"@wordpress/block-editor": "^12.0.0",
		"@wordpress/blocks": "^12.0.0",
		"@wordpress/components": "^25.0.0",
		"@wordpress/i18n": "^4.0.0"
	}
}
